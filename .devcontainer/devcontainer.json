{
    "name": "Trade Registry Dev Environment",
    "dockerComposeFile": ["../docker-compose.yml"],
    "service": "tradereg",
    "workspaceFolder": "/usr/src/app",
    
    // Configuraciones de VS Code DENTRO del contenedor
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python", // Autocompletado y linter de Python
                "ms-python.vscode-pylance",
                "batisteo.vscode-django", // Soporte para plantillas Django
                "njpwerner.autodocstring",
                "github.vscode-pull-request-github"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.testing.pytestEnabled": true
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/common-utils:2.5.6": {
        "installSsh": true
    }
    },
    // Si tu Dockerfile crea un usuario no-root (como 'appuser'), ponlo aqu√≠:
    "remoteUser": "appuser",

    // Evita que el contenedor se apague al cerrar VS Code
    "shutdownAction": "stopCompose"
}